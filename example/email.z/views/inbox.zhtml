{% extends 'layout.zhtml' %}

{% block contents %}

  {% if(is_authenticated(_session_auth)) %}
    {% set emails = retrieve_mail(wallet.address, host, 'Email', 'SendEmail') %}

    <h2>Inbox for {{ wallet.address }}</h2>

    {% for email in emails %}
      <div class="formback">
        <p>
          <b>From</b>:{{ email.from }}
          <a href='/show?messageid={{ email.messageid }}'>{{ email.messageid }}</a>
        </p>
      </div>
    {% endfor %}
  {% endif %}

{% endblock %}
