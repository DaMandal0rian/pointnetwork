{% extends 'layout.zhtml' %}

{% block contents %}

  {% set products = contract_get(host, 'Store', 'getProductsByStoreId', ['0']) %}

    {% for product in products %}
        <div class="store">
            <h3 class="name">{{ product.name }}</h2>
            <i class="description">{{ product.description }}</i>
            <b class="price">{{ product.price }}</b>
        </div>
    {% endfor %}

{% endblock %}